@model AuthorViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (User.Identity.IsAuthenticated)
{
    <div class="row justify-content-center heading">
        <div class="col-4">
            <h2>Edit author</h2>

            <div class="row justify-content-center mt-5">
                <form method="post">
                    <div class="text-start">
                        <label asp-for="FirstName" class="control-label"></label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                        <input asp-for="FirstName" placeholder="Enter first name (max 30 characters)" class="form-control mb-3" />

                        <label asp-for="LastName" class="control-label"></label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                        <input asp-for="LastName" placeholder="Enter last name (max 30 characters)" class="form-control mb-3" />

                        <label asp-for="BirthDate" class="control-label"></label>
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                        <input asp-for="BirthDate" placeholder="choose date" class="form-control mb-3" />

                        <label asp-for="Country" class="control-label"></label>
                        <span asp-validation-for="Country" class="text-danger"></span>
                        <input asp-for="Country" placeholder="Enter country (max 30 characters)" class="form-control mb-3" />
                    </div>
                    <br />
                    <div class="text-center">
                        <button type="submit" class="createbtn w-button text-black">Update</button>
                        <a class="closebtn w-button text-white btn-secondary" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

}
else
{
    <h1 class="heading">You don't have accsess to this page</h1>
}

