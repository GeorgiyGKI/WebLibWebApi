@model AuthorizeViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center heading">
    <div class="col-4">
        <h2>Login</h2>
        <form asp-action="Login" class="text-start">
            <br />
            <label asp-for="Name" class="control-label"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" placeholder="Enter a password (max 30 characters)" class="form-control mb-3" />

            <label asp-for="Password" class="control-label"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input asp-for="Password" placeholder="Enter a password (max 30 characters)" class="form-control mb-3" />
            @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
            {
                <p class="alert alert-danger">@TempData["ErrorMessage"]</p>
            }
            <br />
            <div class="text-center">
                <button type="submit" class="createbtn w-button text-black">Login</button>
                <a class="closebtn w-button text-white btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
            </div>

            
        </form>
    </div>
</div>


