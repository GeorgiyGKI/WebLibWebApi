<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebLibMVC</title>
    <script src="~/ajax/libs/webfont/1.6.26/webfont-1.js" type="text/javascript">
    </script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap">
   
    <link href="~/WebFlowCSS/georgiys-trendy-site-055edf.webflow.908bbf4b9.css"
          rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebLibMVC.styles.css" asp-append-version="true" />
</head>

<body class="body">
    <div data-animation="default" data-collapse="medium" data-duration="400"
         data-easing="ease" data-easing2="ease" role="banner" class="waves-navbar-2 w-nav">
        <div class="container">
            <div class="waves-master-nav-2">
                <div class="clickable">
                    <div id="w-node-_4774884f-5d1f-25a4-b75b-1583243f3426-4d8efa7f" class="logo">
                        
                            <img src="~/658ec4b6b1b7ce4b4d8efa3b/658ec7fcfdb828cf37f83562_world-book-day%20%281%29-1.png"
                                 loading="lazy" width="38" alt="" class="image">
                            <div id="w-node-_03989e12-a140-f3e5-942e-9f2a91d56e20-4d8efa7f" class="text-block">
                                WebLib
                            </div>
                        
                    </div>
                    <div class="waves-middle-nav-2">
                        <nav role="navigation" class="waves---nav-menu w-nav-menu">
                            <a class="waves---nav-link w-nav-link text-black" asp-controller="Home" asp-action="Index">Home</a>
                            <a class="waves---nav-link w-nav-link text-black" asp-controller="Books" asp-action="Index" asp-route-pageNumber="1">Books</a>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="waves---nav-link w-nav-link text-black" asp-controller="Authors" asp-action="Index">Authors</a>
                                <a class="waves---nav-link w-nav-link text-black" asp-controller="Genres" asp-action="Index">Genres</a>
                                <a class="waves---nav-link w-nav-link text-black" asp-controller="Readers" asp-action="Index">Readers</a>
                                <a class="waves---nav-link w-nav-link text-black" asp-controller="TransactionStatuses" asp-action="Index">Statuses</a>
                            }
                        </nav>
                    </div>
                </div>
                <div class="waves---nav-buttons-right">
                    <div class="waves---menu-button w-nav-button">
                        <div class="waves---hamburger-icon w-icon-nav-menu">
                        </div>
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="waves---nav-cta w-button text-white" asp-controller="Authorize" asp-action="Logout">LOGOUT</a>
                    }
                    else
                    {

                        <a class="waves---nav-cta w-button text-white" asp-controller="Authorize" asp-action="Login">LOGIN</a>
                    }
                </div>
            </div>
        </div>
    </div>

    <section class="mt-4">
        <div class="container ">
            @RenderBody()
        </div>
    </section>

    <script src="js/jquery-3.5.1.min.dc5e7f18c8-1.js?site=658ec4b6b1b7ce4b4d8efa3b"
            type="text/javascript" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous">
    </script>
    <script src="~/658ec4b6b1b7ce4b4d8efa3b/js/webflow.20cb1b540-1.js" type="text/javascript">
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
