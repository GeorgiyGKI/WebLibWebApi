@model BookViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (User.IsInRole("Administrator"))
{
    <div class="row justify-content-center heading">
        <div class="col-4">
            <h1>Delete book</h1>

            <form method="post">
                <h2>Are you sure you want to delete this book?</h2>
                <br />
                <h3 class="text">@Model.Title</h3>
                <img src="@Url.Action("GetImage", "Books", new { id = Model.Id })" width="200" alt="Image" />
                <br />
                <button type="submit" class="createbtn w-button text-black">Delete</button>
                <a class="closebtn w-button text-white btn-secondary" asp-action="Index" asp-route-pageNumber="1">Cancel</a>
            </form>
        </div>
    </div>
}
else
{
    <h1>You don't have accsess to this page</h1>
}



