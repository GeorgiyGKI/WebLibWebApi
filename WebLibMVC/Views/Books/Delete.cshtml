@model BookViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row text-center mt-5 justify-content-center">
    @if (User.IsInRole("Administrator"))
    {
        <div class="col-md-6 mt-3">
            <form method="post">
                <h2>Are you sure you want to delete this book?</h2>
                <br />
                <h3 class="text">@Model.Title</h3>
                <img src="@Url.Action("GetImage", "Books", new { id = Model.Id })" width="200" alt="Image" />
                <br />
                <button type="submit" class="btn btn-danger mt-3">Delete</button>
                <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
            </form>
        </div>
    }
    else
    {
        <h1>You don't have accsess to this page</h1>
    }
    <h1 class="text-danger">Delete book</h1>

    
</div>
