@model GenreViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="row justify-content-center heading">
        <div class="col-4">
            <h2>Edit genre</h2>

            <form method="post">
                <div class="text-start">
                    <label asp-for="Name" class="control-label">Genre name</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <br />
                <button type="submit" class="createbtn w-button text-black">Update</button>
                <a class="closebtn w-button text-white btn-secondary" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>

}
else
{
    <h1 class="heading">You don't have accsess to this page</h1>
}


