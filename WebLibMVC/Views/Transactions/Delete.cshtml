@model TransactionViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row text-center mt-5 justify-content-center">
    @if (User.IsInRole("Administrator"))
    {
        <h1 class="text-danger">Delete transaction</h1>

        <div class="col-md-6 mt-3">
            <form method="post">
                <h2>Are you sure you want to delete this transaction?</h2>
                <br />
                <h3 class="text">@Model.CheckoutDate</h3>
                <br />
                <button type="submit" class="btn btn-danger mt-3">Delete</button>
                <a asp-action="Index" asp-route-readerId="@Model.ReaderId" class="btn btn-secondary mt-3">Cancel</a>
            </form>
        </div>
    }
    else
    {
        <h1>You don't have accsess to this page</h1>
    }
    
</div>
