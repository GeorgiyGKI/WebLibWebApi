@model TransactionViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (User.IsInRole("Administrator"))
{
    <div class="row justify-content-center heading">
        <div class="col-4">
            <h1>Delete transaction</h1>

            <form method="post">
                <h2>Are you sure you want to delete this transaction?</h2>
                <br />
                <h3 class="text">@Model.CheckoutDate.ToShortDateString()</h3>
                <br />
                <button type="submit" class="createbtn w-button text-black">Delete</button>
                <a class="closebtn w-button text-white btn-secondary" asp-action="Index" asp-route-readerId="@Model.ReaderId">Cancel</a>
            </form>
        </div>
    </div>

}
else
{
    <h1 class="heading">You don't have accsess to this page</h1>
}

