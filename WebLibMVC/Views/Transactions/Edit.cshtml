@model TransactionViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.IsInRole("Administrator"))
{

    <div class="row justify-content-center heading">
        <div class="col-4">
            <h2>Edit transaction</h2>
            <form method="post">
                <div class="text-start">
                    <span asp-validation-for="BookId" class="text-danger"></span>
                    @Html.DropDownListFor(model => model.BookId, Model.Books, "Select a book", new { @class = "form-control mb-3" })

                    <span asp-validation-for="TransactionStatusId" class="text-danger"></span>
                    @Html.DropDownListFor(model => model.TransactionStatusId, Model.TransactionStatuses, "Select a status", new { @class = "form-control mb-3" })

                    <label asp-for="CheckoutDate" class="control-label"></label>
                    <span asp-validation-for="CheckoutDate" class="text-danger"></span>
                    <input asp-for="CheckoutDate" class="form-control mb-3" />

                    <label asp-for="ReturnDate" class="control-label"></label>
                    <span asp-validation-for="ReturnDate" class="text-danger"></span>
                    <input asp-for="ReturnDate" class="form-control mb-3" />
                </div>
                <br />
                <button type="submit" class="createbtn w-button text-black">Update</button>
                <a class="closebtn w-button text-white btn-secondary" asp-action="Index" asp-route-readerId="@Model.ReaderId">Cancel</a>
            </form>
        </div>
    </div>
}
else
{
    <h1 class="heading">You don't have accsess to this page</h1>
}



</div>

