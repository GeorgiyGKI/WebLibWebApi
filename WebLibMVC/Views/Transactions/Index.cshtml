@model IEnumerable<TransactionViewModel>
@{
    ViewData["Title"] = "Transaction List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="text-center">
        <div class="col">
            <h2>Transactions</h2>
            <a class="btn btn-success" asp-action="Create" asp-route-readerId="@ViewBag.ReaderId">Create</a>
        </div>
    </div>
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th><h5>Reader</h5></th>
                    <th><h5>Book</h5></th>
                    <th><h5>Checkout date</h5></th>
                    <th><h5>Return date</h5></th>
                    <th><h5>Status</h5></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <br />
                @foreach (var Transaction in Model)
                {
                    <tr>
                        <td>@Transaction.ReaderName</td>
                        <td>@Transaction.BookName</td>
                        <td>@Transaction.CheckoutDate.ToLongDateString()</td>
                        <td>
                            @if (Transaction.ReturnDate is not null)
                            {
                                @Transaction.ReturnDate.Value.ToLongDateString()
                                ;
                            }
                        </td>
                        <td>@Transaction.TransactionStatusName</td>
                        <td>
                            <a asp-action="Edit" class="btn-sm btn-primary m-2 no-underline"
                               asp-route-readerId="@Transaction.ReaderId" asp-route-id="@Transaction.Id">Edit</a>
                            <a asp-action="Delete" class="btn-sm btn-danger no-underline"
                               asp-route-readerId="@Transaction.ReaderId" asp-route-id="@Transaction.Id">Delete</a>
                            @if (Transaction.TransactionStatusId == 1)
                            {

                                <a asp-action="Close" class="btn-sm btn-warning no-underline"
                                   asp-route-readerId="@Transaction.ReaderId" asp-route-id="@Transaction.Id">Close</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>